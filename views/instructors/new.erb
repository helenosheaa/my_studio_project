<h2>New Instructor</h2>
<form method="POST" action="/instructors">
  <div class="form-wrap">

    <div class="form">
      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" id="first_name" required/>
    </div>

    <div class="form">
      <label for="last_name">Last Name:</label>
      <input type="text" name="last_name" id="last_name" required/>
    </div>

    <div class="form">
        <label for="speciality">Speciality:</label>
        <select name="speciality_id" id="speciality">
          <% @instructors.each do |instructor|%>

              <option value=<%= instructor.speciality_id %>><%= instructor.speciality.speciality_type.capitalize %></option>
          <% end %>
        </select>
    </div>
    <br>
    <div class="form">
      <input class="btn" type="submit" value="Add Instructor"/>
    </div>

  </div>
</form>
