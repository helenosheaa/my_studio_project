<h4>Instructors</h4>

<div id="instructor-wrapper">
  <% @instructors.each do |instructor| %>

  <div class="instructor">
    <h3><%= instructor.first_name.capitalize %></h3>
    <p>Speciality: <%= instructor.speciality.speciality.capitalize %></p>
    <form action="/instructors/<%= instructor.id %>/delete" method="POST">
    <input type="submit" value="Delete Instructor"></form>
  </div>
  <% end %>
</div>
