<h2>Edit Yoga Class <%= @yogaclass.name  %> </h2>
<form method="POST" action="/yogaclasses/<%= @yogaclass.id  %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="name_select">Class:</label>
      <select name="name_id" id="select_name" >
          <% @yogaclasses.each do |yogaclass| %>
          <% if yogaclass.name == @yogaclass.name  %>
              <option value="<%= yogaclass.name %>" selected = "selected"><%= yogaclass.name.capitalize%></option>
          <% else  %>
          <option value="<%= yogaclass.name %>"><%= yogaclass.name.capitalize%></option>
          <% end %>
          <% end %>
        </select>
    </div>

    <div class="form-el">
      <label for="time">Time:</label>
      <input type="datetime-local" name="time" id="datetime" value="<%= @yogaclass.start_time  %>"/>
    </div>

    <div class="form-el">
      <label for="duration">Duration:</label>
      <input type="text" name="duration" id="duration" value="<%= @yogaclass.duration  %>"/>
    </div>

    <div class="form-el">
      <label for="level_select">Select Level:</label>
      <select name="level_id" id="level_select">
          <% @levels.each do |level| %>
          <% if level.id == @yogaclass.level_id %>
              <option value="<%= level.id  %>"
                selected = "selected"><%= level.level.capitalize %></option>
              <% else  %>
              <option value="<%= level.id %>"><%= level.level.capitalize %></option>
          <% end %>
          <% end %>
        </select>
    </div>

    <div class="form-el">
      <label for="instructor_select">Select Instructor:</label>
      <select name="instructor_id" id="instructor_select">
          <% @instructors.each do |instructor| %>
          <% if instructor.id == @yogaclass.instructor_id %>
              <option value="<%= instructor.id %>" selected = "selected"><%= instructor.first_name.capitalize %></option>
              <% else  %>
              <option value="<%= instructor.id %>"><%= instructor.first_name.capitalize %></option>
          <% end %>
          <% end %>
        </select>
    </div>

    <div class="form-el">
      <input type="submit" value="Edit Yoga Class"/>
    </div>

  </div>
</form>
