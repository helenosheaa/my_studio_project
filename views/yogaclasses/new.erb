<h2>New Yoga Class</h2>
<form method="POST" action="/yogaclasses">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="name">Select Class:</label>
      <select name="name" id="name">
          <% @yogaclasses.each do |yogaclass| %>
              <option value=<%= yogaclass.id %>><%= yogaclass.name.capitalize %></option>
          <% end %>
        </select>
    </div>

    <div class="form-el">
      <label for="time">Time:</label>
      <input type="text" name="time" id="time"/>
    </div>

    <div class="form-el">
      <label for="duration">Duration:</label>
      <input type="text" name="duration" id="duration"/>
    </div>

    <div class="form-el">
      <label for="level">Select Level:</label>
      <select name="level" id="level">
          <% @yogaclasses.each do |yogaclass| %>
              <option value=<%= yogaclass.id %>><%= yogaclass.level.capitalize %></option>
          <% end %>
        </select>
    </div>

    <div class="form-el">
      <label for="instructor_select">Select Instructor:</label>
      <select name="instructor_id" id="instructor_select">
          <% @instructors.each do |instructor| %>
              <option value=<%= instructor.id %>><%= instructor.first_name.capitalize %></option>
          <% end %>
        </select>
    </div>

    <div class="form-el">
      <input type="submit" value="Add Yoga Class"/>
    </div>

  </div>
</form>
