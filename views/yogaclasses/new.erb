<h2>New Yoga Class</h2>
<form method="POST" action="/yogaclasses">
  <div class="form-wrap">

    <div class="form">
      <label for="name">Select Class:</label>
      <select name="name" id="name_id">
          <% @yogaclasses.each do |yogaclass| %>
              <option value=<%= yogaclass.name %>><%= yogaclass.name%></option>
          <% end %>
        </select>
    </div>

    <div class="form">
      <label for="start_time">Time:</label>
      <input type="datetime-local" name="start_time" id="datetime" required/>
    </div>

    <div class="form">
      <label for="duration">Duration:</label>
      <input type="text" name="duration" id="duration" required/>
    </div>

    <div class="form">
      <label for="capacity">Capacity:</label>
      <input type="text" name="capacity" id="capacity" required/>
    </div>

    <div class="form">
      <label for="level">Select Level:</label>
      <select name="level_id" id="level">
          <% @yogaclasses.each do |yogaclass| %>
              <option value=<%= yogaclass.level_id %>><%= yogaclass.level.level_type.capitalize %></option>
          <% end %>
        </select>
    </div>

    <div class="form">
      <label for="instructor_select">Select Instructor:</label>
      <select name="instructor_id" id="instructor_select">
          <% @instructors.each do |instructor| %>
              <option value=<%= instructor.id %>><%= instructor.first_name.capitalize %></option>
          <% end %>
        </select>
    </div>

    <div class="form">
      <input class= "btn" type="submit" value="Add Yoga Class"/>
    </div>

  </div>
</form>
