<h2>Edit Booking</h2>
<form method="POST" action="/bookings/<%= @booking.id  %>">
  <div class="form-wrap">

      <div class="form">
    <label for="member_select">Member:</label>
    <select name="member_id" id="member_select" selected="<%= @booking.member_id  %>">
      <% @members.each do |member| %>
        <% if member.id == @booking.member_id %>
          <option value=<%= member.id %> selected><%= member.full_name %></option>
        <% else %>
          <option value=<%= member.id %>><%= member.full_name %></option>
        <% end %>
      <% end %>
    </select>
  </div>

    <div class="form">
        <label for="yogaclass_select">Yoga Class:</label>
        <select name="yogaclass_id" id="yogaclass_select" selected="<%= @booking.yogaclass_id  %>">
          <% @yogaclasses.each do |yogaclass| %>
          <% if yogaclass.id == @booking.yogaclass_id  %>
              <option value=<%= yogaclass.id %>selected><%= yogaclass.name.capitalize %></option>
            <% else %>
              <option value=<%= yogaclass.id %>><%= yogaclass.name.capitalize %></option>
          <% end %>
          <% end %>
        </select>
      </div>

    <div class="form">
      <input class= "btn" type="submit" value="Edit Booking"/>
    </div>

  </div>
</form>
