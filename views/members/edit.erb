<h2>Edit Member</h2>
<form method="POST" action="/members/<%= @member.id  %>">
  <div class="form-wrap">

    <div class="form">
      <label for="first_name">First Name:</label>
      <input type="text" name="first_name" id="first_name" value="<%= @member.first_name  %>"/>
    </div>

    <div class="form">
      <label for="last_name">Last Name:</label>
      <input type="text" name="last_name" id="last_name" value="<%= @member.last_name  %>"/>
    </div>

    <div class="form">
        <label for="level_select">Level:</label>
        <select class="drop-down" name="level_id" id="level_select">
          <% @levels.each do |level| %>
          <% if level.id == @member.level_id  %>
              <option value="<%= level.id %>" "selected"><%= level.level_type.capitalize %></option>
              <% else  %>
              <option value="<%= level.id %>"> <%= level.level_type.capitalize %></option>
          <% end %>
          <% end %>
        </select>
      </div>
      <br>
    <div class="form">
      <input class="btn" type="submit" value="Edit Member"/>
    </div>

  </div>
</form>
